<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="4" verbose="1" name="QA Automation course project_1"
       annotations="JDK" parallel="tests">

    <test name="Successful Login POM">
        <classes>
            <class name="com.selenium.course_project.tests.SuccessfulLoginPOM"/>
        </classes>
    </test>
    <test name="Unsuccessful Login POM Suite">
        <classes>
            <class name="com.selenium.course_project.tests.UnsuccessfulLoginPOM"/>
        </classes>
    </test>
    <test name="Checkout POM">
        <classes>
            <class name="com.selenium.course_project.tests.CheckoutPOM"/>
        </classes>
    </test>
    <test name="Problem User Login POM">
        <classes>
            <class name="com.selenium.course_project.tests.ProblemUsersLoginPOM"/>
        </classes>
    </test>
</suite>